<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#26adc7" /> <!-- Green border -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Inner background layer -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#acedfa" /> <!-- Lighter green background -->
            <corners android:radius="8dp" /> <!-- Matches the inner radius -->
        </shape>
    </item>
</layer-list>